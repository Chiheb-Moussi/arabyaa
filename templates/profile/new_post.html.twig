{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}
{% block stylesheets %}
<style>
main {
    background: #f0f9fb;
}
</style>
{% endblock %}

{% block body %}

    <!-- content -->
    <section id="content" class="container pabIndent" style="padding-top:50px">
        <!-- contentFiltersHeadingWrap -->
        <header class="contentFiltersHeadingWrap row">
            <div class="col-xs-12 col-sm-10">
                <h1 class="fontNeuron">Ajouter Article</h1>
            </div>
        </header>
        <!-- userProfile -->
        <div class="userProfile">
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-lg-3">
            <!-- profileSidebar -->
            <aside class="profileSidebar">
                <header class="head">
                <div class="imgProfile">
                    <img src="{{ vich_uploader_asset(app.user) }}" alt="" width="74" height="74">
                </div>
                <div class="info">
                    <span class="text">{{ app.user.nom ~' '~ app.user.prenom}}</span>
                </div>
                </header>
                <ul class="navUser list-unstyled">
                <li >
                    <a href="{{ path('user_profile') }}">
                    <i class="far fa-user"></i>
                    <span>Paramètres du compte</span>
                    </a>
                </li>
                <li >
                    <a href="{{ path('actualites')}}">
                    <i class="fi flaticon-house"></i>
                    <span>Mes actualités</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="far fa-heart"></i>
                    <span>Mes favoris</span>
                    </a>
                </li>
                <li class="active">
                    <a href="{{ path('post_new') }}">
                    <i class="fa fa-plus"></i>
                    <span>Ajouter actualité</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="fa fa-sign-out-alt"></i>
                    <span>Se déconnecter</span>
                    </a>
                </li>
                </ul>
            </aside>
            </div>
            <div class="col-xs-12 col-sm-8 col-lg-9">
            <!-- accountData -->
                    <div class="accountData">
                        <div class="head">
                        <h4 class="fontNeuron">Créer un article</h4>
                        
                        </div>
                        <!-- propertiesList -->
                        <div class="propertiesList">
                            
                            {{ include('profile/_form.html.twig') }}
                        </div>
                    </div>
                    <!-- pagination -->
            
            </div>
        </div>
        </div>
    </section>
    
{% endblock %}