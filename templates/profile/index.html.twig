{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}
{% block stylesheets %}
<style>
main {
    background: #f0f9fb;
}
</style>
{% endblock %}

{% block body %}

    <!-- content -->
    <section id="content" class="container pabIndent" style="padding-top:50px">
        <!-- contentFiltersHeadingWrap -->
        <header class="contentFiltersHeadingWrap row">
            <div class="col-xs-12 col-sm-10">
                <h1 class="fontNeuron">Profile</h1>
            </div>
        </header>
        <!-- userProfile -->
        <div class="userProfile">
        <div class="row">
            <div class="col-xs-12 col-sm-4 col-lg-3">
            <!-- profileSidebar -->
            <aside class="profileSidebar">
                <header class="head">
                <div class="imgProfile">
                    <img src="https://via.placeholder.com/74x74" alt="" width="74" height="74">
                </div>
                <div class="info">
                    <span class="text">{{ app.user.nom ~ app.user.prenom}}</span>
                </div>
                </header>
                <ul class="navUser list-unstyled">
                <li class="active">
                    <a href="#">
                    <i class="far fa-user"></i>
                    <span>Paramètres du compte</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="fi flaticon-house"></i>
                    <span>Mes actualités</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="far fa-heart"></i>
                    <span>Mes favoris</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="fa fa-plus"></i>
                    <span>Ajouter actualité</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                    <i class="fa fa-sign-out-alt"></i>
                    <span>Se déconnecter</span>
                    </a>
                </li>
                </ul>
            </aside>
            </div>
            <div class="col-xs-12 col-sm-8 col-lg-9">
            <!-- accountData -->
            <div class="accountData">
                <form>
                <div class="head">
                    <h4 class="fontNeuron">Paramètres du compte</h4>
                </div>
                <div class="accountHolder">
                    
                    <div class="accountContent">
                    <div class="row">
                    <div class="form-group col-xs-6">
                        <label for="itemN-1">Nom</label>
                        <input type="text" class="form-control" value="{{ user.nom  }}" id="itemN-1">
                    </div>
                    <div class="form-group col-xs-6">
                        <label for="itemN-2">Prénom</label>
                        <input type="text" class="form-control" value="{{ user.prenom  }}" id="itemN-2">
                    </div>
                    <div class="form-group  col-xs-12">
                        <label for="itemN-3">Email</label>
                        <input type="email" class="form-control" value="{{ user.email  }}" id="itemN-3">
                    </div>
                    </div>
                        <button type="submit" class="btn alighRight btnSecondary buttonL fontNeuron">Modifier</button>
                    </div>
                </div>
                </form>
            </div>
            <!-- accountData -->
            <div class="accountData">
                <form>
                <div class="head">
                    <h4 class="fontNeuron">Changer mot de passe</h4>
                </div>
                <div class="accountHolder">
                    <div class="accountContent">
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <label for="itemN-5">Mot de passe actuelle</label>
                            <input type="password" class="form-control"  id="itemN-5">
                        </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <label for="itemN-6">Nouveau mot de passe</label>
                            <input type="password" class="form-control"  id="itemN-6">
                        </div>
                        </div>
                        <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <label for="itemN-7">Confirmer nouveau Mot de passe</label>
                            <input type="password" class="form-control"  id="itemN-7">
                        </div>
                        </div>
                    </div>
                    <button type="submit" class="btn alighRight btnSecondary buttonL fontNeuron">Changer mot de passe</button>
                    </div>
                </div>
                </form>
            </div>
            <!-- accountData -->
            <div class="accountData">
                <form>
                <div class="head">
                    <h4 class="fontNeuron">Information complémentaires</h4>
                </div>
                <div class="accountHolder">
                    
                    <div class="accountContent">
                    <div class="row">
                        <div class="form-group col-xs-6">
                            <label for="itemN-1">Date de naissance</label>
                            <input type="date" class="form-control" value="{{ user.dateNaissance|date("Y-m-d")  }}" id="itemN-1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-xs-6">
                            <label for="itemN-2">Téléphone</label>
                            <input type="text" class="form-control" value="{{ user.tel }}" id="itemN-2">
                        </div>
                        <div class="form-group  col-xs-6">
                            <label for="itemN-3">Whatsapp</label>
                            <input type="text" class="form-control" value="{{ user.email  }}" id="itemN-3">
                        </div>

                        <div class="form-group col-xs-6">
                            <label for="itemN-2">Nom de l´école /College /Lycée</label>
                            <input type="text" class="form-control" value="{{ user.ecole }}" id="itemN-2">
                        </div>
                        <div class="form-group  col-xs-6">
                            <label for="itemN-3">Classe</label>
                            <input type="text" class="form-control" value="{{ user.classe  }}" id="itemN-3">
                        </div>

                        <div class="form-group col-xs-6">
                            <label for="itemN-2">IBAN</label>
                            <input type="text" class="form-control" value="{{ user.iban }}" id="itemN-2">
                        </div>
                        <div class="form-group  col-xs-6">
                            <label for="itemN-3">BIC</label>
                            <input type="text" class="form-control" value="{{ user.bic  }}" id="itemN-3">
                        </div>
                        <div class="form-group  col-xs-12">
                            <label for="itemN-3">Lien Page Facebook</label>
                            <input type="text" class="form-control" value="{{ user.fbLink  }}" id="itemN-3">
                        </div>
                    </div>
                    <button type="submit" class="btn alighRight btnSecondary buttonL fontNeuron">Modifier</button>
                    </div>
                </div>
                </form>
            </div>
            <!-- accountData -->
            <div class="accountData">
                <form>
                <div class="head">
                    <h4 class="fontNeuron">Adresse</h4>
                </div>
                <div class="accountHolder">
                    
                    <div class="accountContent">
                    <div class="row">
                        <div class="form-group col-xs-6">
                            <label for="itemN-1">Pays</label>
                            <input type="text" class="form-control" value="{{ user.pays }}" id="itemN-1">
                        </div>
                        <div class="form-group col-xs-6">
                            <label for="itemN-1">Ville</label>
                            <input type="text" class="form-control" value="{{ user.ville }}" id="itemN-1">
                        </div>
                    
                        <div class="form-group col-xs-6">
                            <label for="itemN-2">Gouvernerat</label>
                            <input type="text" class="form-control" value="{{ user.gouvernerat }}" id="itemN-2">
                        </div>
                        <div class="form-group  col-xs-6">
                            <label for="itemN-3">Code Postal</label>
                            <input type="text" class="form-control" value="{{ user.codePostal  }}" id="itemN-3">
                        </div>
                        <div class="form-group  col-xs-12">
                            <label for="itemN-3">Adresse</label>
                            <input type="text" class="form-control" value="{{ user.fbLink  }}" id="itemN-3">
                        </div>
                    </div>
                    <button type="submit" class="btn alighRight btnSecondary buttonL fontNeuron">Modifier</button>
                    </div>
                </div>
                </form>
            </div>
            <!-- accountData -->
            <div class="accountData">
                <form>
                <div class="head">
                    <h4 class="fontNeuron">Photo & Documents</h4>
                </div>
                <div class="accountHolder">
                    <div class="accountContent">
                    
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <label for="itemN-10">Photo</label>
                            <input type="file" class="form-control"  id="itemN-10">
                        </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <label for="itemN-10">Carte d'identité Nationale</label>
                            <input type="file" class="form-control"  id="itemN-10">
                        </div>
                        </div>

                        <div class="col-xs-6 col-md-6">
                        <div class="form-group">
                            <label for="itemN-10">Passport</label>
                            <input type="file" class="form-control"  id="itemN-10">
                        </div>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn alighRight btnSecondary buttonL fontNeuron">Modifier</button>
                    </div>
                </div>
                </form>
            </div>
            </div>
        </div>
        </div>
    </section>
    
{% endblock %}